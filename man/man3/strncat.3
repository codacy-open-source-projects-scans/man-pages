\&
#define NITEMS(arr)     (sizeof((arr)) / sizeof((arr)[0]))
\&
void print_ut_user(struct utmp *ut);
\&
void
print_ut_user(struct utmp *ut)
{
	char  buf[NITEMS(ut\->ut_user) + 1];
\&
	strcpy(buf, "");
	strncat(buf, ut\->ut_user, NITEMS(ut\->ut_user));
	puts(buf);
}
